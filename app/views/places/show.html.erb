<!-- place detail page -->

<style>
  html * {
    font-family: Arial;
  }
</style>

<h1> <%= @place["name"] %> </h1>

  <% for post in @posts %>
  <h3>
    <%= post["title"] %>
  </h3>
    <%= post["posted_on"] %>
  <p></p>
    <i><%= post["description"] %></i>
  <p></p>
  <% end %>

<p>
  <a href="/posts/new?place_id=<%=@place["id"]%>">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>
