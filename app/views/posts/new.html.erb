<style>
  html * {
    font-family: Arial;
  }
</style>

<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
    <%= form.label "title", "What should we title this post?"%>
    <%= form.text_field "title" %>
  </p>
  <p>
    <%= form.label "posted_on", "When did this happen?" %>
    <%= form.date_field "posted_on" %>
  </p>
    <p>
    <%= form.label "description", "What did you do?"%>
    <%= form.text_field "description" %>
  </p>
  <p>
    <%= form.hidden_field "place_id" %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<p><a href="/places/ <%= @post["place_id"] %>"> Nevermind - Back To Previous Page</a></p>